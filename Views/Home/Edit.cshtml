@model EADProject.Models.movies
@{
    ViewBag.Title = "Edit Movie";
}

<h2>Edit Movie</h2>

<form class="form-horizontal" action="/Home/EditDone" method="post">
    <input type="hidden" id="id" name="id" value=@Model.Id required>
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Title:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" placeholder="Enter movie title" name="title" value="@Model.Title.Trim()" required>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="genre">Genre:</label>
        <div class="col-sm-10">
            <select class="form-control" name="genre">
                @if ("Fantasy".Equals(Model.Genre.Trim()))
                {
                    <option selected>Fantasy</option>
                }
                else
                {
                    <option>Fantasy</option>
                }
                @if ("Action".Equals(Model.Genre.Trim()))
                {
                    <option selected>Action</option>
                }
                else
                {
                    <option>Action</option>
                }
                @if ("Adventure".Equals(Model.Genre.Trim()))
                {
                    <option selected>Adventure</option>
                }
                else
                {
                    <option>Adventure</option>
                }
                @if ("Comedy".Equals(Model.Genre.Trim()))
                {
                    <option selected>Comedy</option>
                }
                else
                {
                    <option>Comedy</option>
                }
                @if ("Horror".Equals(Model.Genre.Trim()))
                {
                    <option selected>Horror</option>
                }
                else
                {
                    <option>Horror</option>
                }
                @if ("Romance".Equals(Model.Genre.Trim()))
                {
                    <option selected>Romance</option>
                }
                else
                {
                    <option>Romance</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="duration">Duration:</label>
        <div class="col-sm-10">
            <input type="number" min="5" max="350" class="form-control" id="duration" placeholder="Enter movie duration" name="duration" value=@Model.Duration required>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="year">Year:</label>
        <div class="col-sm-10">
            <input type="number" max="2020" min="1950" class="form-control" id="year" placeholder="Enter movie release year" name="year" value=@Model.Release_Year required>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="rating">Rating:</label>
        <div class="col-sm-10">
            <input type="range" min="1" max="10" class="form-control" id="rating" placeholder="Enter movie rating" name="rating" value=@Model.Rating required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Edit Movie</button>
        </div>
    </div>
</form>